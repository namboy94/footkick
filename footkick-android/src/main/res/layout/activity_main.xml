<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchButton"
        android:id="@+id/loadingScreenSwitcher"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/loadingScreenText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:layout_centerHorizontal="true"
                android:textSize="75sp"/>
        <ImageView
                android:layout_below="@+id/loadingScreenText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/loading"
                android:contentDescription="@string/loading_screen"/>

    </RelativeLayout>

    <ScrollView
            android:id="@+id/countryScroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            tools:context=".android.MainActivity">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/countryHolder">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/countryText"
                    android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </ScrollView>
</ViewSwitcher>
